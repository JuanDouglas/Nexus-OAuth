@using Nexus.OAuth.Web.Models.Enums;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="d-flex flex-column buttons" id="tfaType">
    <h3>Autenticar Sua Conta!</h3>
    <p class="small">Para a sua segurança á autenticação de dois fatores foi ativada, escolha um método para continuar:</p>

    <button type="button" class="btn btn-outline-primary" data-key="@(Enum.GetName(TwoFactorType.Email))" data-name="E-mail">
        <i class="fa-solid fa-envelope"></i> Autenticação via Email
    </button>
    <button type="button" class="btn btn-outline-primary" data-key="@(Enum.GetName(TwoFactorType.Wpp))" data-name="Whatsapp" disabled>
        <i class="fa-brands fa-whatsapp"></i> Autenticação via Whatsapp
    </button>
    <button type="button" class="btn btn-outline-primary" data-key="@(Enum.GetName(TwoFactorType.Phone))" data-name="Celular" disabled>
        <i class="fa-solid fa-comment-sms"></i> Autenticação via SMS
    </button>
    <button type="button" class="btn btn-outline-primary" data-key="@(Enum.GetName(TwoFactorType.App))" data-name="Aplicativo" disabled>
        <i class="fa-solid fa-mobile-screen-button"></i> Autenticação via Aplicativo
    </button>
</div>

<div id="tfaLoader" class="loader visually-hidden">
    <div class="component">
        <partial name="Tea" />
    </div>
</div>

<div class="visually-hidden sec-code" id="tfaCode">
    <h3>Autenticar Sua Conta!</h3>
    <p class="small">Para a sua proteção á autenticação de dois fatores foi ativada, continue usando o código enviado ao seu {tfaType}:</p>

    <div class="number-inputs">
        <input class="input-number" type="text" maxlength="1" autofocus>
        <input class="input-number" type="text" maxlength="1">
        <input class="input-number" type="text" maxlength="1">
        <input class="input-number" type="text" maxlength="1">
        <input class="input-number" type="text" maxlength="1">
        <input class="input-number" type="text" maxlength="1">
    </div>        
    
   <div class="btn-bottom">
        <button type="button" id="btnSendCode" class="button button-primary" onclick="sendCode()">Confirmar</button>
        <a class="small" onclick="">Não recebeu o código ?</a>
   </div>
</div>