<!DOCTYPE html>
<html lang="en" class="no-js">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#096e54" />
    <title>@ViewData["Title"] - Nexus</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Nexus.OAuth.Web.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Heebo:400,700|IBM+Plex+Sans:600" rel="stylesheet" asp-append-version="true">
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://unpkg.com/scrollreveal@4.0.0/dist/scrollreveal.min.js"></script>
</head>

<body class="is-boxed has-animations" onload="loadInputs()">
    <div class="body-wrap boxed-container">

        @RenderBody()

        <footer class="site-footer has-top-divider">
            <div class="container">
                <div class="site-footer-inner">
                    <div class="brand footer-brand">
                        <a href="#">
                            <img class="asset-light" src="~/img/logo-light.svg" alt="Logo">
                            <img class="asset-dark" src="~/img/logo-dark.svg" alt="Logo">
                        </a>
                    </div>
                    <ul class="footer-links list-reset">
                        <li>
                            <a href="#" onclick="redirectTo('Home')">Home</a>
                        </li>
                        <li>
                            <a href="~/Home/Contact">Contact</a>
                        </li>
                        <li>
                            <a href="#">FAQ's</a>
                        </li>
                        <li>
                            <a href="#">Support</a>
                        </li>
                        <li>
                            <a href="https://auth.nexus-company.tech/swagger">API</a>
                        </li>
                        <li>
                            <a href="~/Home/Privacy">Privacy</a>
                        </li>
                    </ul>
                    <ul class="footer-social-links list-reset">
                        <li>
                            <a href="#">
                                <span class="screen-reader-text">Facebook</span>
                                <i class="fa fa-lg fa-linkedin"> </i>
                            </a>
                        </li>
                        <li>
                            <a href="https://www.instagram.com/company.nexus/">
                                <span class="screen-reader-text">Instagram</span>
                                <i class="fa fa-lg fa-instagram"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <span class="screen-reader-text">Twitter</span>
                                <i class="fa fa-lg fa-twitter"></i>
                            </a>
                        </li>
                    </ul>
                    <div class="footer-copyright">&copy; @DateTime.UtcNow.Year Nexus Company, all rights reserved</div>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/js/main.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <div class="modal modal-full" tabindex="-1" id="redirectModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-full" role="document">
            <iframe src="/Authentication/Redirect" title="description"
                    style="min-width: 100%;min-height: 100%;"></iframe>
        </div>
    </div>
</body>

</html>