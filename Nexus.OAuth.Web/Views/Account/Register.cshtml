@using Nexus.OAuth.Web.Models;
@model Account
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Register";
    Layout = "_Empty";
}

<script src="~/js/Views/register.js" asp-append-version="true" required></script>

<section class="sing-up-terminal">
    <h4>Account</h4>
    <hr />

    <partial name="Terminal" />
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Views/authentication.js" asp-append-version="true"></script>
    <script src="https://hcaptcha.com/1/api.js" async defer></script>
}

@section Modals{
    <div class="modal fade" id="termsAndCaptcha" role="dialog">
        <div class="modal-dialog">
            <div class="card modal-content terms">
                <div class="card-body text-center">
                    <h3>Ultimo passo!</h3>
                    <p class="small">Para finalizar seu cadastro você precisa aceitar os termos e privacidade da Nexus.</p>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="AcceptTerms" value="false">
                        <label class="form-check-label" for="AcceptTerms">
                            Aceito todos os  <a>Termos</a> e <a href="~/Home/Privacy">Pol&iacute;tica de Privacidade</a>.
                        </label>
                        <span asp-validation-for="AcceptTerms" class="text-danger"></span>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" id="AcceptTermsCaptcha" type="checkbox" asp-for="AcceptTerms" value="false">
                        <label class="form-check-label" for="AcceptTermsCaptcha">
                            Este site é protegido por hCaptcha e sua
                            <a href="https://www.hcaptcha.com/privacy">Pol&iacute;tica de Privacidade</a> e
                            <a href="https://www.hcaptcha.com/terms">Termos de Servi&ccedil;os</a> se aplicam.
                        </label>
                        <span asp-validation-for="AcceptTerms" class="text-danger" value="false"></span>
                    </div>
                    <div class="h-captcha" data-sitekey="@ViewBag.hCaptchaKey"></div>
                    <div class="h-captcha-error"></div>
                    <button class="form-control" onclick="sendAccount()">Finalizar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="congratulations" role="dialog">
        <div class="modal-dialog">
            <div class="card modal-content congratulations">
                <div class="card-body text-center">
                    <img src="https://img.icons8.com/bubbles/200/000000/trophy.png">
                    <h3>Bem vindo a Nexus!</h3>
                    <p class="small">Ready! Your account was on Nexus was created, now check your email to confirm your account.</p>
                    <div class="buttons">
                        <button class="button button-secondary">Check account </button>
                        <button class="form-control" onclick="registerOk()">Ok</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}