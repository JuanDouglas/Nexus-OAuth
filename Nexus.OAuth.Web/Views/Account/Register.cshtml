@model Nexus.OAuth.Web.Models.Account
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Register";
    Layout = "_Empty";
}
<script src="~/js/Views/register.js"></script>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-3 form-register">
        <form id="formRegister" method="POST" data-content="@ViewBag.RedirecTo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card card-center">
                <div class="">
                    <div class="step first-step">
                        <div class="header">
                            <h4 class="feature-title mt-0">Account Register</h4>
                            <p class="small">Register with Nexus to get benefits that only Nexus offers you</p>
                        </div>

                        <div class="body">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Your Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" placeholder="example@domain.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="control-label"></label>
                                <input asp-for="PhoneNumber" type="phone" class="form-control" placeholder="+00 (00) 00000-0000" maxlength="15"/>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="step second-step hidden">
                        <div class="header">
                            <h4 class="feature-title mt-0">Account Access</h4>
                            <p class="small">
                                Now create a password to access your account.
                                Remember not to forget it, after all it will be your access.
                            </p>
                        </div>

                        <div class="body">
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="********" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="control-label"></label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="********" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="AcceptTerms">
                                <label class="form-check-label" for="AcceptTerms">
                                    I accept and agree to all <a>Terms</a> and <a>Privacy Police</a>.
                                </label>
                                <span asp-validation-for="AcceptTerms" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="step form-group">
                        <button type="button" id="register" class="form-control next-button" onclick="next()">Next <span class="fa fa-lg fa-arrow-right"></span></button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}