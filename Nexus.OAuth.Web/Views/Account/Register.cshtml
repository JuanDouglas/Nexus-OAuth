@using Nexus.OAuth.Web.Models;
@model Account
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Register";
    Layout = "_Empty";
}

<main class="content">
    <script src="~/js/Views/register.js"></script>
    <script src="~/js/Views/authentication.js"></script>

    <h4>Account</h4>
    <hr />

    <div class="card card-register">
        <div class="content gradient-background">
            <div class="logo">
                <img src="~/img/nexus_logo.png" width="200" />
            </div>
        </div>

        <div class="form">
            <form id="formRegister" method="POST" data-redirect="@ViewBag.RedirectTo">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="step first-step" id="first-step">
                    <div class="header">
                        <h4 class="feature-title mt-0">Account Register</h4>
                        <p class="small">Register with Nexus to get benefits that only Nexus offers you</p>
                    </div>

                    <div class="body">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Your Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="example@domain.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Phone" class="control-label"></label>
                            <input asp-for="Phone" type="phone" class="form-control" placeholder="+00 (00) 00000-0000" maxlength="15" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="step second-step visually-hidden" id="second-step">
                    <div class="header">
                        <h4 class="feature-title mt-0">Account Access</h4>
                        <p class="small">
                            Now create a password to access your account.
                            Remember not to forget it, after all it will be your access.
                        </p>
                    </div>

                    <div class="body">
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="********" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="********" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="AcceptTerms">
                            <label class="form-check-label" for="AcceptTerms">
                                I accept and agree to all <a>Terms</a> and <a>Privacy Police</a>.
                            </label>
                            <span asp-validation-for="AcceptTerms" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="step form-group">
                    <button type="button" id="register" class="form-control next-button">Next <span class="fa fa-lg fa-arrow-right"></span></button>
                    <p class="message">Is it already registered? <a onclick="toLogin()">Login</a></p>
                </div>
            </form>
        </div>
    </div>
</main>

<div class="modal fade" id="congratulations" role="dialog">
    <div class="modal-dialog">
        <div class="card modal-content congratulations">
            <div class="card-body text-center">
                <img src="https://img.icons8.com/bubbles/200/000000/trophy.png">
                <h3>Welcome to the Nexus!</h3>
                <p class="small">Ready! Your account was on Nexus was created, now check your email to confirm your account.</p>
                <div class="buttons">
                    <button class="button button-secondary">Check account </button>
                    <button class="form-control" onclick="registerOk()">Ok</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}