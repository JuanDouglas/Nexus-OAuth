<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:layout_width="match_parent"
        android:id="@+id/imgCameraOutPut"
        android:layout_marginBottom="@dimen/layout_qr_bottom_heigth"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackgroundScanner"
        android:layout_height="@dimen/layout_qr_bottom_heigth">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="@string/read_qr_code_title"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:text="@string/read_qr_code"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout> 
    
    <ImageView
        android:layout_width="60dp"
        android:layout_margin="20dp"
        android:layout_alignParentRight="true"
        android:layout_height="60dp"
        android:foreground="@drawable/primary_ripple"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/btnFlashLight"
        android:padding="10dp"
        android:src="@drawable/primary_ripple"/>

</RelativeLayout>
