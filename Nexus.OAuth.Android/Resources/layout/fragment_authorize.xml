<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/card_padding"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="5dp"
        app:cardElevation="25dp"
        app:cardCornerRadius="90dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardBackgroundColor="?android:attr/colorBackground"
        app:layout_constraintTop_toTopOf="@id/cardApplication"
        app:layout_constraintBottom_toTopOf="@id/cardApplication">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@id/imgLogo"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:id="@+id/cardApplication"
        android:clickable="true"
        app:cardCornerRadius="25dp"
        app:cardElevation="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Name Example"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:id="@+id/txtName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                style="@style/MaterialAlertDialog.Material3.Title.Text"
                />
            <ImageView
                android:layout_width="32.5dp"
                android:layout_height="32.5dp"
                android:src="@drawable/question"
                android:clickable="true"
                android:padding="5dp"
                android:background="@drawable/m3_selection_control_ripple"
                android:tint="@android:color/secondary_text_dark"
                android:tintMode="src_in"
                app:layout_constraintRight_toRightOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtDescription"
                android:maxLines="7"  
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/txtName"
                android:text="Description Description Description Description Description Description Description Description Description Description Description Description Description Description Description DescriptionDescription Description Description Description Description Description Description Description"
                android:layout_alignBottom="@id/txtName"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtReadMore"
                android:maxLines="1"  
                app:layout_constraintTop_toBottomOf="@id/txtDescription"
                android:text="@string/text_read_more"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="5dp"
                android:layout_alignBottom="@id/txtName"
                android:background="@drawable/ripple_normal"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDecline"
                android:text="@string/btn_decline"
                app:layout_constraintTop_toTopOf="@id/btnAuthorize"
                app:layout_constraintLeft_toLeftOf="parent"
                style="@style/AppTheme.Button.TextButton"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_authorize"
                android:id="@+id/btnAuthorize"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@id/txtReadMore"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>