<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    android:clickable="true"
    android:padding="@dimen/card_padding">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ltHeader"
        android:layout_marginTop="@dimen/margin_top_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:minWidth="65dp"
            android:src="@drawable/nexus_crystal"
            android:layout_margin="@dimen/input_text_margin"
            android:id="@+id/imgLogo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_header_password"
            android:textSize="25dp"
            android:minWidth="75dp"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="example@gmail.com"
            android:drawableStart="@drawable/ic_person"
            android:drawableTint="?android:attr/textColorPrimary"
            android:id="@+id/txtUser"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_password"
        android:id="@+id/iptPassword"
        android:layout_marginTop="@dimen/card_padding"
        app:helperTextEnabled="true"
        app:helperText="@string/helper_text_password"
        app:errorIconDrawable="@drawable/mtrl_ic_error"
        app:layout_constraintTop_toBottomOf="@id/ltHeader"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:counterEnabled="true"
        app:counterMaxLength="@integer/max_email_characters">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:id="@+id/edtPassword"
            android:inputType="textPassword"
            style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox.Dense"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatCheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint_show_password"
        android:id="@+id/cbShowPassword"
        app:layout_constraintTop_toBottomOf="@id/iptPassword"
        app:layout_constraintLeft_toLeftOf="@id/iptPassword"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnForgotPassword"
        android:text="@string/btn_forgot_password"
        android:layout_marginTop="@dimen/input_text_margin"
        app:layout_constraintTop_toBottomOf="@id/cbShowPassword"
        app:layout_constraintLeft_toLeftOf="@id/iptPassword"
        style="@style/AppTheme.Button.TextButton"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_next"
        android:id="@+id/btnNext"
        android:layout_marginBottom="@dimen/input_text_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/iptPassword"/>
</androidx.constraintlayout.widget.ConstraintLayout>